{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "allowJs": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@zenithbuild/core": [
                "./content/types.ts"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ]
}